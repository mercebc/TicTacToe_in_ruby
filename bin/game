#!/usr/bin/env ruby
# Allows you to require any file in lib
$: << File.join(File.dirname(__FILE__), '..', 'lib')

require 'UI/UI'
require 'core/board'
require 'core/flow'

class Game
  attr_reader :ui
  attr_reader :board
  attr_reader :flow

  def initialize
    @ui = UI.new
    @board = Board.new(3)
    @flow = Flow.new(@ui, @board)
    @flow.start
  end
end

Game.new
